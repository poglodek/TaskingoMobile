<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskingoMobile.Views.ChatPage"
             Title="Chat">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition  Height="auto"/> 
        </Grid.RowDefinitions>
        <ScrollView>
            <Editor  Text="{Binding Path=Messages}" IsReadOnly="True" />
        </ScrollView>
        <StackLayout Grid.Row="1" Margin="0,15,0,15">
            <Entry Placeholder="Message" Text="{Binding Path=Message}" />
            <Button  Text="Send Message!" Command="{Binding Path=SendMessage}"/>
        </StackLayout>
    </Grid>
    

</ContentPage>